{% extends "layout.html.twig" %}
{% block contenu %}
    <p> <h2> Liste des clients </h2></p>
    <table>
        <tr>
            <th>num</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>adresse</th>
            <th>complement</th>
            <th>cp</th>
            <th>ville</th>
            <th>tel</th>
        </tr>
        {% for unClient in tousClients %}
            <tr>
            <td>{{ unClient.getId() }}</td>
            <td>{{ unClient.getNomCli() }}</td>
            <td>{{ unClient.getPrenomCli() }}</td>
            <td>{{ unClient.getAdresseRue1Cli() }}</td>
            {% if unClient.getAdresseRue2Cli() %}
                <td> {{ unClient.getAdresseRue2Cli() }}</td>
            {%  else %}
                <td></td>
            {% endif %}
            <td>{{ unClient.getCpCli() }}</td>
            <td>{{ unClient.getVilleCli()}}</td>
            <td>{{ unClient.getTelCli() }}</td>
            <td><a href="/?c=gestionCommande&a=commandesUnClient&id=1" ><button>Voir Commandes</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
{% block footer %}
    {{ parent() }}
    Nombre de clients : 8
{% endblock %}
