{% extends "layout.html.twig" %}
{% block contenu %}
    <p> <h2> Liste des clients </h2></p>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">num</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">adresse</th>
                <th scope="col">complement</th>
                <th scope="col">cp</th>
                <th scope="col">ville</th>
                <th scope="col">tel</th>
                <th scope="col"></th>
            </tr>
        </thead>
        {% for unClient in tousClients %}
            <tbody>
            <tr>
                <td>{{ unClient.getId() }}</td>
                <td>{{ unClient.getNomCli() }}</td>
                <td>{{ unClient.getPrenomCli() }}</td>
                <td>{{ unClient.getAdresseRue1Cli() }}</td>
                {% if unClient.getAdresseRue2Cli() %}
                    <td> {{ unClient.getAdresseRue2Cli() }}</td>
                {%  else %}
                    <td></td>
                {% endif %}
                <td>{{ unClient.getCpCli() }}</td>
                <td>{{ unClient.getVilleCli()}}</td>
                <td>{{ unClient.getTelCli() }}</td>
                <td><a href="/?c=gestionCommande&a=commandesUnClient&id={{ unClient.getId() }}" ><button>Voir Commandes</button></td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}
{% block footer %}
    {{ parent() }}
    Nombre de clients : 8
{% endblock %}
